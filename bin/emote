#!/bin/zsh

typeset -A emotes
emotes=(
    shrug     '¯\_(ツ)_/¯'
    tableflip '(╯°□°)╯︵ ┻━┻'
    barro     'ʕ •ᴥ•ʔ'
    lenny     '( ͡° ͜ʖ ͡°)'
    satan     'ψ(｀∇´)ψ'
    shades    '(•_•) ( •_•)>⌐■-■ (⌐■_■)'
    squid     '<コ:彡'
    walrus    '(:3 っ)っ'
    fish      '<º)))><'
    sad       '(╥﹏╥)'
    whee      'ᕕ( ᐛ )ᕗ'
)

if [[ -n ${emotes[$1]} ]]; then
    echo ${emotes[$1]}
else
    echo "usage: $(basename $0) <emote>"
    echo
    for key in "${(@k)emotes}"; do
        echo -e "$key: ${emotes[$key]}"
    done | awk '{ $1 = $1"\t"; print }' | column -t -s $'\t'
    exit 1
fi
